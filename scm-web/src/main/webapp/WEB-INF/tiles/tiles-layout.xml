    <definition name="page-layout" template="/WEB-INF/tiles/page/page_layout.jsp">
        <put-attribute name="body"      value=""/>
    </definition>

    <definition name="pop-layout" template="/WEB-INF/tiles/pop/pop_layout.jsp">
