<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

	<!-- Context Configuration Location -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:ifms/spring/context-*.xml</param-value>
	</context-param>

	<!-- 필터 설정 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
		<url-pattern>*.page</url-pattern>
		<url-pattern>*.pop</url-pattern>
		<url-pattern>*.json</url-pattern>
		<url-pattern>*.file</url-pattern>
		<url-pattern>*.report</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>xssEscapeServletFilter</filter-name>
		<filter-class>com.navercorp.lucy.security.xss.servletfilter.XssEscapeServletFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>xssEscapeServletFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Spring Security 필터 -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 리스너 설정 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>

	<!-- Spring MVC DispatcherServlet 설정 -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<multipart-config>
			<max-file-size>1048576000</max-file-size><!-- 500MB -->
			<max-request-size>1048576000</max-request-size><!-- 100MB -->
			<file-size-threshold>0</file-size-threshold>
		</multipart-config>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/ifms/springmvc/dispatcher-servlet.xml</param-value>
		</init-param>
		<init-param>
			<param-name>throwExceptionIfNoHandlerFound</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern><!-- forward방식 - post방식 , 로그인관련 -->
		<url-pattern>*.page</url-pattern><!-- tiles내에서 body영역만 ajax로 교체시 또는 jsp 1:1 사용시 -->
		<url-pattern>*.pop</url-pattern><!-- 공통 템플릿 팝업 - 레이어팝업전용 -->
		<url-pattern>*.json</url-pattern><!-- json - ajax 전용 -->
		<url-pattern>*.file</url-pattern>
		<url-pattern>*.report</url-pattern><!-- 리포트 -->
	</servlet-mapping>

	<!-- Welcome File -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 로그인 설정 추가 -->
	<!--Spring Security가 인증을 관리하므로 제거-->
	<!--
        <login-config>
            <auth-method>BASIC</auth-method>
        </login-config>
    -->

	<!-- 에러 페이지 설정 -->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/cmn/error/errorPage.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/cmn/error/code404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/cmn/error/code500.jsp</location>
	</error-page>


	<!-- 세션 설정 -->
	<session-config>
		<session-timeout>30</session-timeout>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>

	<!-- 세션 복제 -->
	<distributable />

	<!-- JNDI 리소스 참조 -->
	<resource-ref>
		<description>JNDI DataSource for PostgreSQL</description>
		<res-ref-name>jdbc/postgresDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

