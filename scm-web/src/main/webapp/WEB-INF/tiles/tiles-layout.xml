    <!-- 지도 화면 타일즈(행정 - 사고현황 조회) -->
    <definition name="tiles-layout-map-acci" template="/WEB-INF/tiles/map/tilesFrame.jsp">
        <put-attribute name="loadFile"  value="/WEB-INF/tiles/map/loadFile.jsp" />
