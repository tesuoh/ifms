<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="egovframework,ifms">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>		
    </context:component-scan>
    
    <context:annotation-config/>

	<!-- 국제화 Message 설정 jboss 환경이슈있으니, 와일드카드 하나씩 전부 등록필요 * 표기 안됨-->
	<bean id="egovMessageSource" class="egovframework.util.EgovMessageSource">
		<property name="reloadableResourceBundleMessageSource">
			<ref bean="egovBaseMessageSource"/>
		</property>
	</bean>
	<!-- 국제화 Message 설정 -->	
	<bean id="egovBaseMessageSource" class="egovframework.util.EgovWildcardReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:/ifms/message/message-common</value>
<!-- 				<value>classpath:/ifms/message/adm/mod/AdmModIfmsSourceGenerate</value> -->
			</list>
		</property>
		<property name="defaultEncoding" value="UTF-8" />
		<property name="cacheSeconds">
			<value>60</value>
		</property>
	</bean>
	
	<!-- MessageRepositoryImpl 등록 -->
	<bean id="messageRepository" class="ifms.core.i18n.service.Impl.MessageRepositoryImpl" />

	<!-- DB + 파일 메시지를 모두 지원하는 CombinedMessageSource 등록 -->
	<bean id="messageSource" class="ifms.core.i18n.message.CombinedMessageSource">
		<constructor-arg ref="messageRepository" />
		<constructor-arg ref="egovBaseMessageSource" />
		<property name="useCodeAsDefaultMessage" value="true" />
	</bean>
	
	<bean id="leaveaTrace" class="org.egovframe.rte.fdl.cmmn.trace.LeaveaTrace">
		<property name="traceHandlerServices">
			<list>
				<ref bean="traceHandlerService" />
			</list>
		</property>
	</bean>

	<bean id="traceHandlerService" class="org.egovframe.rte.fdl.cmmn.trace.manager.DefaultTraceHandleManager">
		<property name="reqExpMatcher">
			<ref bean="antPathMater" />
		</property>
		<property name="patterns">
			<list>
				<value>*</value>
			</list>
		</property>
		<property name="handlers">
			<list>
				<ref bean="defaultTraceHandler" />
			</list>
		</property>
	</bean>
	
	<bean id="antPathMater" class="org.springframework.util.AntPathMatcher" />
	<bean id="defaultTraceHandler" class="org.egovframe.rte.fdl.cmmn.trace.handler.DefaultTraceHandler" />
	 
</beans>
