	<!-- 지도 팝업용 레이아웃 정의 -->
	<definition name="map-popup-layout" template="/WEB-INF/tiles/pop/map_popup_layout.jsp">
        <put-attribute name="loadFile"  value="/WEB-INF/tiles/map/loadFile.jsp" />
        <put-attribute name="header"    value="/WEB-INF/tiles/map/header.jsp" />
        <put-attribute name="quick"     value="/WEB-INF/tiles/map/quick.jsp" />
        <put-attribute name="left"      value="/WEB-INF/tiles/map/acci/left.jsp" />
        <put-attribute name="modal"      value="/WEB-INF/tiles/map/acci/modal.jsp" />
	    <put-attribute name="body" value=""/>
	</definition>
	
	<!-- 지도 팝업용 패턴 매핑 -->
	<definition name="*/*/*.map-pop" extends="map-popup-layout">
	    <put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp"/>
	</definition>

</tiles-definitions>