        <put-attribute name="left"      value="/WEB-INF/tiles/common/left.jsp" />
        <put-attribute name="modal"      value="/WEB-INF/tiles/common/modal.jsp" />
        <put-attribute name="body" value="" />
    </definition>

    <!-- 관리자 화면 타일즈 -->
    <definition name="tiles-layout-adm" template="/WEB-INF/tiles/adm/tilesFrame.jsp">
