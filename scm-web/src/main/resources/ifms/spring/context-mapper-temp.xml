<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSessionTemp" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourceTemp" />  
		<property name="configLocation" value="classpath:/ifms/sqlmap/config/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath*:/ifms/sqlmap/mappers/common/i18n/**/*.xml" />
	</bean>
	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSessionTemplateTemp" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionTemp"/>
	</bean>
	
	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
	<bean class="org.egovframe.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="ifms.core.i18n.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionTemp"/>
	</bean>

</beans>